class GreetingsRepository
    GREETINGS = []

    constructor: ->
        for greeting in greetings
            [lang, greet] = greeting[0..1]
            GREETINGS[lang.toLowerCase()] = lang: lang, greeting: greet

    find: (name) ->
        GREETINGS[name.toLowerCase()]

    findOrRandom: (robot, name) ->
        name? && @find(name) || @random(robot)

    greeting: (name) ->
        @find(name)?.greeting

    all: ->
        GREETINGS

    names: ->
        for v of GREETINGS
            v.lang

    keys: ->
        Object.keys(GREETINGS)

    random: (robot) ->
        GREETINGS[robot.random @keys()]


module.exports = GreetingsRepository
